<div class="head-wrap">
    <h2 class="head">
        ユーザ検索<span class="head-point">－Search Users－</span>
    </h2>
    <hr class="divider my-4">
</div>
<%= form_with url: search_users_path, method: :get, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :id, 'ID検索' %>
    <%= f.text_field :id, class: 'form-control', :placeholder "IDを入力" %> 
  </div>
 
  <%= f.submit '検索', class: 'btn btn-secondary btn-block' %> 
<% end %>
<br><br>
<%= render 'users', users: @users %>