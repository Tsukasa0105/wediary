<div class="mt-5 conrainer">
    <div class="row">
        <div class="col-4">
            <%= profile_picture @user, 200 %>
        </div>
        <div class="col-8 text-left">
            <div class="row">
                <div class="col-6">
                    <h1><%= @user.name %></h1>
                    <h2>User ID: <%= @user.id %></h2>
                </div>
            </div>
            <%= link_to "設定", edit_user_path, class: "btn btn-secondary float-right" if current_user?(@user.id) %>
            <%= link_to 'ログアウト', logout_path, method: :delete, class: "btn btn-danger float-right" if current_user?(@user.id) %>
            <div class="row profile-status">
                <div class="col-4">
                    <div class="profile-status"><%= 0 %>posts</div>
                </div>
                <div class="col-4">
                    <div class="profile-status"><%= @user.total_followers %> followers</div>
                </div>
                <div class="col-4">
                    <div class="profile-status"><%= @user.total_followings %> followings</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row profile-posts">

    </div>    
</div>