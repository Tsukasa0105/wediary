<% if @group.request_users.include?(current_user) && @group.invited_users.include?(current_user) %>
    <div class="head-wrap">
      <h2 class="head">
          Requesting Users<span class="head-point">－参加申請中のユーザ－</span>
      </h2>
    </div>
    <% @request_users.each do |user| %>
      <% unless @group.invited_users.include?(user) %>
        <div class ="">
            <dix class="row user_row mt-2 mb-2">
                <div class="col-1 user-picture">
                    <%= link_to profile_picture(user, 40), user_path(user.id) %>
                </div>
                <div class="col-9 user-name">
                    <p><%= link_to user.name, user_path(user.id), class: "text-dark" %></p>
                </div>
                <div class="col-2 user-followbtn">
                    <%= render 'group_to_users/permit_button', group: @group, user: user %>
                </div>
            </dix>
        </div>
      <% end %>
    <% end %>
<% end %>