<div class="head-wrap">
  <div class="conrainer group_show">
    <div>
      <%= link_to group_path(@group), class: "icons float-left" do %>
        <span><i class="fas fa-arrow-left"></i></span>
      <% end %>
    </div>
    <div class="center event-status">
        <%= default_event_picture(@event, 100) %>
        <% if @map.present? %>
            <span class="event-status-name"><strong><%= @event.name %></strong></span><span class="head-point">－<%= @event.event_date %> @<%= @map.title %>－</span>
        <% else %>
          <div>
            <%= @event.name %>
          </div>
          <div>
            <span class="event-status-name"><strong><%= @event.name %></strong></span><span class="head-point">－<%= @event.event_date %>－</span>
          </div>
        <% end %>
        <%= link_to edit_group_event_path(@group), class: "icons float-right" do %>
          <span class="float-right"><i class="fas fa-cogs"></i></span>
        <% end %>
    </div>
  </div>
</div>    

<div class="head-wrap">
    <h2 class="head">
        写真<span class="head-point">－Images－</span>
        <%= link_to "/groups/#{@group.id}/events/#{@event.id}/photos/new", class:"icons float-right" do %>
          <span><i class="far fa-plus-square"></i></span>
        <% end %>
    </h2>
</div>

<div class="container-fluid p-0">
  <div class="row no-gutters">
    <% if @photos.present? %>
      <% @photos.each do |photo| %>
            <% photo.images.each do |image| %>
                  <div class="col-3">
                      <%= link_to image_tag(image.url, class: "m-1 img-fluid"), "/groups/#{@group.id}/events/#{@event.id}/photos/#{photo.id}" %> 
                  </div>  
            <% end %>
      <% end %>
    <% else %>
      <div class="no_image">
        <h3>写真はありません</h3>
      </div>
    <% end %>
  </div>
</div>

<div class="head-wrap">
    <h2 class="head">
        精算記録<span class="head-point">－Payment records－</span>
        <%= link_to new_group_event_pay_record_path(@group, @event), class:"icons float-right" do %>
          <span><i class="far fa-plus-square"></i></span>
        <% end %>
    </h2>
    
    <%= render '/pay_records/payments', pay_records: @pay_records %>
</div>
