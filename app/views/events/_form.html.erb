<%= form_with(model:[group, event], local: true) do |f| %>

   <%= f.hidden_field :user_id, {value: current_user.id} %> 
   <%= f.hidden_field :group_id, {value: group.id} %> 
    
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>        
    </div>
    
    <div class="form-group">
        <%= f.label :start_time %>
        <%= f.datetime_field :start_time, {}, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= f.label :map_id, '場所' %>
        <%= f.fields_for :maps do |od| %>
            <%= f.collection_select :map_id, Map.where(user_id: current_user.id), :id, :title, class: "form-control" %>
        <% end %>
        <%= link_to '地図から選ぶ', maps_path(group_id: event.group.id), class: 'btn btn-lg btn-light' %>
  　</div>
  　
    <div class="form-group">    
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
    </div>  　
    
    <div class="form-group">    
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control" %>
    </div>
    
    <%= f.submit "保存", class: "btn btn-primary btn-block" %>

<% end %>
