<% if logged_in? %>
    <div class="header-area">
        <div class="navbar navbar-expand-md main-header">
            <div class="col-md-2 logo">
                <a href="/"class="vertical-middle"><img src="/assets/logo.png" width=150px></a>
            </div>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="ナビゲーションの切替">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="menu-wrapper align-items-center col-md-6">
                <% if logged_in? %>
                <div class="main-menu collapse navbar-collapse", id="navigation">
                    <nav> 
                        <ul class="navbar-nav">                                                                                          
                            <li class="nav-item"><a href="/"><i class="fas fa-home"></i> Groups</a></li>
                            <li class="nav-item">
                                <%= link_to user_path(current_user) do %>
                                    <i class="fas fa-user"></i> My profile
                                <% end %>
                            </li>
                            <li class="nav-item"><a><i class="fas fa-search"></i> Search</a>
                                <ul class="submenu">
                                    <li><%= link_to 'Groups', search_groups_path %></li>
                                    <li><%= link_to 'Users', search_users_path %></li>
                                    <li><%= link_to 'Friends', friends_user_path(current_user) %></li>
                                    <li><%= link_to 'Follow Requests', followers_user_path(current_user) %></li>
                                    <li><%= link_to 'Maps', maps_index_path %></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <%= link_to contact_path do %>
                                    <i class="fas fa-envelope"></i> Contact
                                <% end %>
                            </li>
                        </ul>
                    </nav>
                </div>
                <% end %>
            </div>
            <div class="col-md-4 right">
                <span class="ml-5"><%= link_to profile_picture(current_user, 40), edit_user_path(current_user.id) %></apan>
                <span class="ml-1"><%= link_to current_user.name, edit_user_path(current_user.id), class: "text-dark" %></span>
                <span class="ml-2"><%= link_to 'ログアウト', logout_path, method: :delete, class: "btn btn-danger float-right" %></span>
            </div>
        </div>
    </div>
<% else %>
    <div class="header-area">
        <div class="main-header header-sticky">
            <div class="header-left">
            </div> 
            <!-- Mobile Menu -->
            <div class="col-12">
            </div>
        </div>
    </div>
<% end %>
