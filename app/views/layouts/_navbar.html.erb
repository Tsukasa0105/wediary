<% if logged_in? %>
    <div class="header-area">
        <div class="navbar navbar-expand-lg navbar-light bg-light main-header">
            <div class="col-lg-2 logo collapse navbar-collapse">
                <a href="/"class="vertical-middle"><img src="/assets/logo.png" width=150px></a>
            </div>
            <div>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="ナビゲーションの切替">
                  <span class="navbar-toggler-icon"></span>
                </button>

                <span class="right"><%= link_to profile_picture(current_user, 40), edit_user_path(current_user.id) %></apan>
                <span class="ml-1"><%= link_to current_user.name, edit_user_path(current_user.id), class: "text-dark" %></span>
                <span class="ml-2">
                    <%= link_to  logout_path, method: :delete, title: "logout", class: "btn float-right" do %>
                        <i class="fas fa-sign-out-alt"></i>
                    <% end %>
                </span>
            </div>
            <div class="menu-wrapper align-items-center col-lg-7">
                <div class="main-menu collapse navbar-collapse justify-content-end", id="navigation">
                    <nav> 
                        <ul class="navbar-nav">                                                                                          
                            <li class="nav-item"><a href="/"><i class="fas fa-home"></i> Groups</a></li>
                            <li class="nav-item">
                                <%= link_to user_path(current_user) do %>
                                    <i class="fas fa-user"></i> My profile
                                <% end %>
                            </li>
                            <li class="nav-item"><a><i class="fas fa-search"></i> Search</a>
                                <ul class="submenu">
                                    <li><%= link_to 'Groups', search_groups_path %></li>
                                    <li><%= link_to 'Users', search_users_path %></li>
                                    <li><%= link_to 'Friends', friends_user_path(current_user) %></li>
                                    <li><%= link_to 'Follow Requests', followers_user_path(current_user) %></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <%= link_to contact_path do %>
                                    <i class="fas fa-envelope"></i> Contact
                                <% end %>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <script>
    $(function() {
    // ↓タブをクリックした時の処理↓
      $('.navbar-toggler').on('click', function(){
          if($('#navigation').hasClass('show')){
            $('#navigation').toggle();
          }
        });
      });
    </script>
<% else %>
    <div class="header-area">
        <div class="navbar navbar-expand-lg navbar-light bg-light main-header">
            <div class="col-6">
                <a href="/"class="vertical-middle"><img src="/assets/logo.png" width=150px></a>
            </div>
            <div class="col-6">
                <div class="main-menu navbar-collapse justify-content-end", id="navigation">
                    <nav> 
                        <ul class="navbar-nav">                                                                                          
                            <li class="nav-item">
                                <%= link_to "ログイン", login_path %>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
<% end %>
