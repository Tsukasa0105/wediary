<% if logged_in? %>
    <div class="header-area">
        <div class="navbar navbar-expand-lg navbar-light bg-light main-header">
            <div class="col-lg-2 logo collapse navbar-collapse">
                <a href="/"class="vertical-middle"><img src="/assets/logo.png" width=100px></a>
            </div>
            <div class="col-lg-3 vertical-middle">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="ナビゲーションの切替">
                  <span class="navbar-toggler-icon"></span>
                </button>
                    <span class="right"><%= link_to profile_picture(current_user, 40), user_path(current_user.id) %></apan>
                    <span class="ml-1"><%= link_to current_user.name, user_path(current_user.id), class: "text-dark" %></span>
                    <span class="ml-2">
                        <%= link_to  logout_path, method: :delete, title: "logout", class: "btn" do %>
                            <i class="fas fa-sign-out-alt"></i>
                        <% end %>
                    </span>
            </div>
            <div class="menu-wrapper align-items-center col-lg-5">
                <div class="main-menu collapse navbar-collapse justify-content-end", id="navigation">
                    <nav> 
                        <ul class="navbar-nav">                                                                                          
                            <li class="nav-item">
                                <%= link_to notifications_path do %>
                                    <% if unchecked_notifications.any? %>
                                        <i class="fa fa-circle" style="color: gold;"></i>
                                    <% end %>
                                    <i class="fas fa-bell"></i> 通知
                                <% end %>
                            </li>
                            <li class="nav-item"><a><i class="fas fa-search"></i> 検索</a>
                                <ul class="submenu">
                                    <li><%= link_to 'グループ', search_groups_path %></li>
                                    <li><%= link_to 'ユーザー', search_users_path %></li>
                                </ul>
                            </li>
                            <li class="nav-item"><a><i class="fas fa-question"></i> ヘルプ</a>
                                <ul class="submenu">
                                    <li><%= link_to '使い方', how_to_path %></li>
                                    <li><%= link_to 'Q&A', question_path %></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="new-group">
                <%= link_to new_group_path, class: "btn btn-success" do %>
                    <span><i class="far fa-plus-square"></i><span class="new-group-word">グループ作成</span></span>
                <% end %>
            </div>
        </div>
    </div>
    <script>
    $(function() {
    // ↓タブをクリックした時の処理↓
      $('.navbar-toggler').on('click', function(){
          if($('#navigation').hasClass('show')){
            $('#navigation').toggle();
          }
        });
      });
    </script>
<% else %>
    <div class="header-area">
        <div class="navbar navbar-expand-lg navbar-light bg-light main-header">
            <div class="col-6">
                <a href="/"class="vertical-middle"><img src="/assets/logo.png" width=100px></a>
            </div>
            <div class="col-6">
                <div class="main-menu", id="navigation">
                    <nav> 
                        <ul class="navbar-nav justify-content-end">                                                                                          
                            <li class="nav-item right">
                                <%= link_to "ログイン", login_path %>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
<% end %>
