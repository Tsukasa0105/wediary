<%= form_with(model:[group, event, pay_record], local: true) do |f| %>
  <div class="form-group chat-group-form__field">
    <%= f.hidden_field :event_id, {value: event.id} %> 
    <div class="chat-group-form__field--left">
      <%= f.label :name, class: 'chat-group-form__label' %>
      <%= f.text_field :name, class: 'chat__group_name chat-group-form__input form-control', placeholder: '名前' %>
    </div>
    <div class="chat-group-form__field--left">
      <%= f.label :paied_user_id, class: 'chat-group-form__label' %>
      <%= f.collection_select :paied_user_id, event.group.joined_users.uniq, :id, :name %>
    </div>
    <div class="chat-group-form__field--right">
      <%= f.label :amount, class: 'chat-group-form__label' %>
      <%= f.number_field :amount, class: 'chat__group_name chat-group-form__input form-control', placeholder: '金額' %>
    </div>
    <div class="chat-group-form__field--left">
      <%= f.label :user_ids, class: 'chat-group-form__label form-group' %>
      <%= f.collection_check_boxes :user_ids, event.group.joined_users.uniq, :id, :name, class:"form-control" %>
    </div>
    <div class="chat-group-form__field--left">
      <%= f.label :initial_user_ids, class: 'chat-group-form__label form-group' %>
      <%= f.collection_check_boxes :initial_user_ids, event.group.joined_users.uniq, :id, :name, class:"form-control" %>
    </div>
  </div>
  <div class="form-group chat-group-form__field.clearfix">
    <div class="chat-group-form__field--right">
      <%= f.submit class: 'btn btn-secondary chat-group-form__action-btn form-control' %>
    </div>
  </div>
<% end %>